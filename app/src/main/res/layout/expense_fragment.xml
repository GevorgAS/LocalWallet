<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_expense_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/expense_markups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="@string/markupshint"
                android:inputType="text"
                android:lines="3"
                android:minHeight="80dp"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/expense_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:hint="@string/locationhint"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:lines="1"
                android:minHeight="50dp"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/expense_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background"
                android:gravity="top"
                android:paddingLeft="5dp"
                android:hint="@string/pricehint"
                android:inputType="number"
                android:lines="1"
                android:minHeight="50dp"
                android:textSize="25sp" />

            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/expense_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/edit_text_background"
                android:focusable="false"
                android:gravity="top"
                android:hint="@string/datehint"
                android:inputType="date"
                android:lines="1"
                android:minHeight="50dp"
                android:textSize="25sp" />
            <Button
                android:id="@+id/save_expanse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="40dp"
                android:background="@color/colorAccent"
                android:text="@string/save" />
        </LinearLayout>


    </ScrollView>


</RelativeLayout>